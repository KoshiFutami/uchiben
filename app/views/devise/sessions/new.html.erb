
<div class="col-10">
  <h1 class="h2 text-center">うちなー塾にログイン</h1>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, value: 'メールアドレス' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>
  
    <div class="form-group">
      <%= f.label :password, value: 'パスワード' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="text-center">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  
    <div class="actions text-center">
      <%= f.submit "ログイン", class: 'btn btn-outline-primary' %>
    </div>
  <% end %>
</div>
<p class="text-right my-2">
  <%= link_to 'ゲストログイン', users_guest_sign_in_path, method: :post %>
</p>
<%= render "devise/shared/links" %>
