<%= form_with(model: @vocab, local: true) do |f| %>

    <div class="form-group">
        <%= f.label :name, value: "うちなーぐち" %>
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :translation, value: "標準語" %>
        <%= f.text_field :translation, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :sentence, value: "例文" %>
        <%= f.text_area :sentence, class: "form-control" %>
    </div>

    <div class="text-center mt-4">
        <%= f.submit "投稿する", class: 'btn btn-outline-primary' %>
    </div>
<% end %>