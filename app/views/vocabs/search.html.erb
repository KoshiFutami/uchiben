<div class="search">
    <h1 class="page-title">うちなーぐち検索</h1>

    <%= form_with url: search_vocabs_path, :method => 'get', local: true do |f| %>
    
        <div class="search-box">
            <%= f.text_field :search, placeholder: 'キーワードを入力' %>
            <%= f.submit '検索', :name => nil %>
        </div>
    
    <% end %>
    
    <% if @vocabs && @vocabs.exists? %>

        <p class="search-result">「<%= params[:search] %>」の検索結果は<%= @vocabs.count %>件ありました！</p>
    
        <%= render 'shared/vocab_list', vocabs: @vocabs %>
   
    <% elsif @vocabs && !@vocabs.exists? %>
        <p class="search-result">「<%= params[:search] %>」の検索結果はありませんでした…</p>
    <% end %>
</div>